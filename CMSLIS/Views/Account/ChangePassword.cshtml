@model  CMSLIS.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";

}

<!-- Head Libs -->
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">Đổi mật khẩu</h3>
    </div>

    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="box-body">

            @Html.ValidationSummary(false, "", new { @class = "text-danger", style = "margin-bottom: 20px;" })

            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Password:<span class="required">*</span> </label>
                <div class="col-xs-4">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Password New:<span class="required">*</span> </label>
                <div class="col-xs-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" , placeholder = "Password New" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Confirm Password:<span class="required">*</span> </label>
                <div class="col-xs-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
            </div>

            <div class="form-group text-center">
                <div class="col-xs-7">
                    <button type="submit" id="SaveListService" name="submit" value="SaveListService" class="btn btn-danger"> <i class="fa fa-save"></i> Change Password</button>
                    <a id="BackLogin" class="btn btn-primary" href="/Account/Login"> <i class="fa fa-sign-in"></i> Sign In</a>

                </div>
            </div>
        </div>


    }
</div>


<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>


<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/AdminLTE/javascripts/theme.init.js"></script>

<script>

    document.addEventListener("keydown", function (event) {
        if (event.keyCode == 83) {
            document.getElementById('SaveListService').click();
            return false;
        }

        if (event.keyCode == 90) {
            var url = document.getElementById("BackLogin").href;
            window.location.href = url;
        }

    });

    $(document).ready(function () {
        $('.select2').select2()
    });
</script>
@model  CMS_Core.Entity.tbl_seo
@using CMS_Core.Entity;

@{
    ViewBag.Title = "Thêm mới mô tả SEO";
    var UserInfo = ((cms_Account)Session["UserInfo"]);
    CMS_Core.Common.ComboBoxFinal<ClassComboBox> ComboBox = new CMS_Core.Common.ComboBoxFinal<ClassComboBox>();
}


<script src="/Content/AdminLTE/js/Customer/ListseoAdd.js"></script>
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>

<!-- Begin Form -->
<div class="box box-info">

    @using (Html.BeginForm("ListseoAdd", "CatalogSystem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    <div class="box-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-xs-3" style="font-weight:bold; ">Chọn chuyên mục: <span class="required">*</span></label>
            <div class="col-xs-3">
                @Html.DropDownListFor(m => m.cateid, ComboBox.GetComboBoxBySelected("SELECT   cateId  as idfield,    cateName as namefield FROM  cms_Category where cateActive = 1 order by cateLevel, cateOrd   ", "idfield", "namefield", Model.cateid.ToString(), true), new { @class = "form-control select2" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-xs-3" style="font-weight:bold; ">Chọn loại keyword: <span class="required">*</span></label>
            <div class="col-xs-3">
                @Html.DropDownListFor(m => m.type, ComboBox.GetComboBoxBySelected("SELECT   id  as idfield,    Name as namefield FROM  tbl_seoType where status = 2    ", "idfield", "namefield", Model.type.ToString(), true), new { @class = "form-control select2" })
            </div>
        </div>




        <div class="form-group">
            <label class="control-label col-xs-3" style="font-weight:bold; ">Mô tả seo :<span class="required">*</span> </label>
            <div class="col-xs-6">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @title = "Mô tả seo ", rows = "10" })
            </div>
        </div>


        @Html.TextBoxFor(m => m.id, new { @class = "checkbox-inline", Type = "hidden" })

        <div class="form-group text-center">

            <button type="submit" name="submit" id="SaveListseoAdd" value="SaveListseoAdd" class="btn btn-danger"> <i class="fa fa-save"></i> Lưu (Alt + S)</button>
            <a id="BackListseo" href="/CatalogSystem/Listseo" class="btn btn-primary"><i class="fa fa-backward"></i> Quay lại (Alt + Z) </a>
        </div>



    </div>
    }
</div>
<!-- End Form -->

<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>


<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>


@model  CMS_Core.Entity.CMS_SICK
@{
    ViewBag.Title = "Thêm mới danh sách bệnh";
}

<script src="/Content/AdminLTE/js/Customer/ListSickAdd.js"></script>
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>

<!-- Begin Form -->
<div class="box box-info">




    @using (Html.BeginForm("ListSickAdd", "CatalogSystem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="box-body">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Tên bệnh:<span class="required">*</span></label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.SICK_NAME, new { @class = "form-control", type = "SingleLine", placeholder = "Tên bệnh" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Mô tả bệnh: </label>
                <div class="col-xs-6">
                    @Html.TextAreaFor(m => m.SICK_DESC, new { @class = "form-control", @title = "Mô tả bệnh", rows = "4" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Triệu trứng:</label>
                <div class="col-xs-6">
                    @Html.TextAreaFor(m => m.SICK_SYMPTOM, new { @class = "form-control", @title = "Triệu trứng", rows = "4" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Chữa trị:</label>
                <div class="col-xs-6">
                    @Html.TextAreaFor(m => m.SICK_HEALING, new { @class = "form-control", @title = "Chữa trị", rows = "4" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-xs-3" style="font-weight:bold; ">Ghi chú:</label>
                <div class="col-xs-6">
                    @Html.TextAreaFor(m => m.SICK_NOTE, new { @class = "form-control", @title = "Ghi chú", rows = "4" })
                </div>
            </div>

            @Html.TextBoxFor(m => m.ID, new { @class = "checkbox-inline", Type = "hidden" })

            <div class="form-group text-center">

                <button type="submit" name="submit" id="SaveListSickAdd" value="SaveListSickAdd" class="btn btn-danger"> <i class="fa fa-save"></i> Lưu (Alt + S)</button>
                <a id="BackListSick" href="/CatalogSystem/ListSick" class="btn btn-primary"><i class="fa fa-backward"></i> Quay lại (Alt + Z) </a>
            </div>



        </div>
    }
</div>
<!-- End Form -->

<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>


<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/AdminLTE/javascripts/theme.init.js"></script>


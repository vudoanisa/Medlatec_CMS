@model  CMS_Core.Entity.cms_Category
@using CMS_Core.Entity;
@{
    ViewBag.Title = "Thêm mới chuyên mục";
    CMS_Core.Common.ComboBoxFinal<ClassComboBox> ComboBox = new CMS_Core.Common.ComboBoxFinal<ClassComboBox>();
    var UserInfo = ((cms_Account)Session["UserInfo"]);
}

<script src="/Content/AdminLTE/js/Customer/CategorysAdd.js"></script>


<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>

<!-- Begin Content -->
<div class="box box-info">


    @using (Html.BeginForm("CategorysAdd", "CatalogSystem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="box-body">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Tên chuyên mục:<span class="required">*</span></label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.cateName, new { @class = "form-control", type = "SingleLine", placeholder = "Tên chuyên mục" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Alias <span class="required">*</span>:</label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.CateAlias, new { @class = "form-control", type = "SingleLine", placeholder = "Alias" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Mô tả chuyên mục<span class="required">*</span>:</label>
                <div class="col-xs-6">
                    @Html.TextAreaFor(m => m.cateDescription, new { @class = "form-control", @title = "Mô tả chuyên mục", rows = "5" })
                    
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Chuyên mục cha</label>
                <div class="col-xs-3">
                    @Html.DropDownListFor(m => m.cateParrent, ComboBox.GetComboBoxBySelected("select cateId as idfield, cateName as namefield from cms_Category where cateStatus = 2  and cateParrent = 0   order by cateOrd asc ", "idfield", "namefield", Model.cateParrent.ToString(), true), new { @class = "form-control select2" })


                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Vị trí:</label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.cateOrd, new { @class = "form-control", type = "number", placeholder = "Vị trí", value = "1" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Từ khóa chuyên mục:<span class="required">*</span></label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.cateKeyword, new { @class = "form-control", type = "SingleLine", placeholder = "Từ khóa chuyên mục" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-group text-center">
                    <div class="col-xs-8">
                        <button type="submit" id="SaveCategorysAdd" name="submit" value="SaveCategorysAdd" class="btn btn-danger"><i class="fa fa-save"></i> Lưu (Alt + S)</button>
                        <a id="BackListCategorys" href="/CatalogSystem/ListCategorys?cateParrent=@Model.cateParrent" class="btn btn-primary"><i class="fa fa-backward"></i>  Quay lại (Alt + Z) </a>
                    </div>
                </div>
                @Html.TextBoxFor(m => m.cateId, new { @class = "checkbox-inline", Type = "hidden" })


            </div>
        </div>

    }

</div>
<!-- End Form -->

<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>


<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/AdminLTE/javascripts/theme.init.js"></script>

@model  CMS_Core.Entity.cms_NewsSource
@using CMS_Core.Entity;
@{
    ViewBag.Title = "Thêm mới nguồn tin";
}


<script src="/Content/AdminLTE/js/Customer/SourceAdd.js"></script>
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>
 
<!-- Begin Form -->
<div class="box box-info">

    @using (Html.BeginForm("SourceAdd", "CatalogSystem", FormMethod.Post, new { @class = "form-horizontal"  }))
    {
    <div class="box-body">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Tên nguồn<span class="required">*</span></label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.SourceName, new { @class = "form-control", type = "SingleLine", placeholder = "Tên nguồn" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Link<span class="required">*</span></label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.SourceLink, new { @class = "form-control", type = "SingleLine", placeholder = "Link" })
            </div>
        </div>





        @Html.TextBoxFor(m => m.SourceId, new { @class = "checkbox-inline", Type = "hidden" })



        <div class="form-group text-center">
            <div class="col-xs-10">
                <button type="submit" name="submit" id="SaveSourceAdd" value="SaveSourceAdd" class="btn btn-danger"> <i class="fa fa-save"></i> Lưu (Alt + S)</button>
                <a id="BackSource" href="/CatalogSystem/Source" class="btn btn-primary"> <i class="fa fa-backward"></i>  Quay lại (Alt + Z) </a>
            </div>
        </div>
    </div>
    }
</div>
<!-- End Form -->
<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>



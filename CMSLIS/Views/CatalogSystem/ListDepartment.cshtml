@using CMS_Core.Entity;
@model  CMSLIS.Models.SearchMenuViewModel
@{
    ViewBag.Title = "Danh sách khoa khám";
    var CMS_DEPARTMENTS = (List<CMS_DEPARTMENT>)ViewBag.CMS_DEPARTMENTS;
}

<script src="/Content/AdminLTE/js/Customer/ListDepartment.js"></script>
<!-- Head Libs -->
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>


<!-- Begin Content -->
<div class="box box-info">

    @using (Html.BeginForm("ListDepartment", "CatalogSystem", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
    {
        <div class="box-body">
            <div class="col-sm-3">
                <div class="form-group align-content-center">
                    <label class="control-label col-xs-4" style="font-weight:bold; ">Trạng thái: </label>
                    <div class="col-xs-8">
                        @Html.DropDownListFor(m => m.Status, this.ViewBag.GetTypeStatus as List<SelectListItem>, new { @class = "form-control select2", style = "width: 90%;", onchange = "SelectedValue(this)" })
                    </div>
                </div>
            </div>

            <div class="col-sm-2">
                <div class="form-group">
                    <button type="submit" id="cmdSearch" name="submit" value="SearchListDepartment" class="btn btn-primary"><i class="fa fa-search"></i> Tìm kiếm</button>
                </div>
            </div>
        </div>
    }

        <div class="box box-info" style="margin-top: 5px;">
            <!-- Sorting -->
            <section class="panel">


                <!-- Begin Content -->
                <div class="panel-body">
                    <div class="row" style="margin-bottom: 5px;margin-left: -5px;">
                        <a id="ListDepartmentNew" href="/CatalogSystem/ListDepartmentAdd" class="btn btn-info mr-1 mb-2"><i class="fa fa-plus-square-o"></i> Thêm mới (Ctrl + F1) </a>                        
                        <button type="button" id="ListDepartmentDelete" value="ListDepartmentDelete" class="btn btn-danger mr-1 mb-2" style="width:100px;" onclick="return ConfirmDelete();"><i class="fa fa-remove"></i> Xóa </button>
                        <button type="button" id="ListDepartmentPublic" value="ListDepartmentPublic" class="btn btn-info mr-1 mb-2" style="width:100px;" onclick="return ConfirmPublic();"><i class="fa fa-check-square-o"></i> Duyệt </button>
                    </div>

                        <table id="sorting-table" class="table table-bordered table-striped dataTable" role="grid">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="checkBoxAll" class="custom-checkbox" /></th>
                                    <th>Tên khoa </th>
                                    <th>Mô tả</th>
                                    <th><span style="width:100px;">Trạng thái</span></th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (CMS_DEPARTMENTS != null)
                                {
                                    foreach (var data in CMS_DEPARTMENTS)
                                    {
                                        <tr>
                                            <td><input type="checkbox" name="ID" value="@data.ID" class="checkBox custom-checkbox chkCheckBoxId" /></td>
                                            <td>@data.DEPARTMENT_NAME</td>
                                            <td>@data.DEPARTMENT_DESC</td>

                                            <td style="width: 120px; ">@Html.Raw(CMSLIS.Common.Common.getTypeStatus(data.DEPARTMENT_STATUS))</td>

                                            <td class="td-actions">
                                                <a href="/CatalogSystem/ListDepartmentAdd?ID=@data.ID"><i class="fa fa-edit edit"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>

                    </div>
</section>
            <!-- End Sorting -->
        </div>
    </div>
    <!-- End Content -->

    <script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

    <script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>


    <!-- Specific Page Vendor -->
    <script src="/Content/AdminLTE/vendor/select2/select2.js"></script>
    <script src="/Content/AdminLTE/vendor/jquery-datatables/media/js/jquery.dataTables.js"></script>
    <script src="/Content/AdminLTE/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/Content/AdminLTE/vendor/jquery-datatables-bs3/assets/js/datatables.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="/Content/AdminLTE/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="/Content/AdminLTE/javascripts/theme.init.js"></script>

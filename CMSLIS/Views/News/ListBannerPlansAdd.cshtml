@model  CMS_Core.Entity.cms_Banner_Plans

@{
    ViewBag.Title = "ListBannerPlansAdd";
}

<script src="/Content/AdminLTE/js/Customer/ListBannerPlansAdd.js"></script>
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>

<!-- Begin Form -->
<div class="box box-info">

    @using (Html.BeginForm("ListBannerPlansAdd", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="box-body">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Vị trí quảng cáo<span class="required">*</span> </label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.planTitle, new { @class = "form-control", type = "SingleLine", placeholder = "Vị trí quảng cáo" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">form</label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.planForm, new { @class = "form-control", type = "SingleLine", placeholder = "form" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">width</label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.width, new { @class = "form-control", type = "number", placeholder = "Chiều rộng" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">height</label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.height, new { @class = "form-control", type = "number", placeholder = "Chiều cao" })
                </div>
            </div>


            @Html.TextBoxFor(m => m.planId, new { @class = "checkbox-inline", Type = "hidden" })



            <div class="form-group text-center">
                <div class="col-xs-10">
                    <button type="submit" name="submit" id="SaveListBannerPlansAdd" value="SaveListBannerPlansAdd" class="btn btn-danger"> <i class="fa fa-save"></i> Lưu (Alt + S)</button>
                    <a id="BackListBannerPlans" href="/News/ListBannerPlans" class="btn btn-primary"> <i class="fa fa-backward"></i>  Quay lại (Alt + Z) </a>
                </div>
            </div>
        </div>
    }
</div>
<!-- End Form -->


<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>

@model  CMS_Core.Entity.cms_ImagesCate
@{
    ViewBag.Title = "Thêm mới chuyên mục ảnh";
}


<script src="/Content/AdminLTE/js/Customer/ListCateImageAdd.js"></script>
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>

<!-- Begin Form -->
<div class="box box-info">

    @using (Html.BeginForm("ListCateImageAdd", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="box-body">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Tên chuyên mục<span class="required">*</span> </label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.vName, new { @class = "form-control", type = "SingleLine", placeholder = "Tên chuyên mục" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Tiêu đề<span class="required">*</span></label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.vTitle, new { @class = "form-control", type = "SingleLine", placeholder = "Tiêu đề" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Mô tả</label>
                <div class="col-xs-6">
                    @Html.TextAreaFor(m => m.vDescription, new { @class = "form-control", placeholder = "Mô tả", rows = 3 })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-xs-2" style="font-weight:bold; ">Từ khóa</label>
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.vKeyword, new { @class = "form-control", type = "SingleLine", placeholder = "Từ khóa" })
                </div>
            </div>


            @Html.TextBoxFor(m => m.vId, new { @class = "checkbox-inline", Type = "hidden" })



            <div class="form-group text-center">
                <div class="col-xs-10">
                    <button type="submit" name="submit" id="SaveListCateImageAdd" value="SaveListCateImageAdd" class="btn btn-danger"> <i class="fa fa-save"></i> Lưu (Alt + S)</button>
                    <a id="BackListCateImage" href="/News/ListCateImage" class="btn btn-primary"> <i class="fa fa-backward"></i>  Quay lại (Alt + Z) </a>
                </div>
            </div>
        </div>
    }
</div>
<!-- End Form -->


<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>


<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/AdminLTE/javascripts/theme.init.js"></script>





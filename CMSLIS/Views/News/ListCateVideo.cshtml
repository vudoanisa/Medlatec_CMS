@using CMS_Core.Entity;
@{
    ViewBag.Title = "Danh mục nhóm video";
    var VideoCates = (List<cms_VideoCate>)ViewBag.VideoCates;
}

<script src="/Content/AdminLTE/js/Customer/ListCateVideo.js"></script>
<!-- Head Libs -->
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>


<style>

    /*  */

    #preview {
        position: absolute;
        border: 1px solid #ccc;
        background: #333;
        padding: 5px;
        display: none;
        color: #fff;
    }

    /*  */
</style>


<div class="box box-info">

    <div class="box box-info" style="margin-top: 5px;">
        <section class="panel">
            <!-- Begin Content -->
            <div class="panel-body">
                <div class="row" style="margin-bottom: 5px;margin-left: -5px;">
                    <button type="button" id="ListCateVideoAdd" value="ListCateVideoAdd" class="btn btn-info mr-1 mb-2" onclick="return ConfirmAdd();"><i class="fa fa-plus-square-o"></i> Thêm mới (Ctrl + F1) </button>
                    <button type="button" id="ListCateVideoDelete" value="ListCateVideoDelete" class="btn btn-danger mr-1 mb-2" style="width:100px;" onclick="return ConfirmDelete();"><i class="fa fa-remove"></i> Xóa </button>
                    <button type="button" id="ListCateVideoPublic" value="ListCateVideoPublic" class="btn btn-info mr-1 mb-2" style="width:100px;" onclick="return ConfirmPublic();"><i class="fa fa-check-square-o"></i> Duyệt </button>
                </div>

                <!-- Sorting -->
                <table id="sorting-table" class="table table-bordered table-striped dataTable" role="grid">
                    <thead>
                        <tr>

                            <th><input type="checkbox" id="checkBoxAll" class="custom-checkbox" /></th>
                            <th>Tên Chuyên mục</th>
                            <th>Tiêu đề</th>
                            <th>Mô tả</th>
                            <th>Từ khóa</th>
                            <th><span style="width:100px;">Trạng thái</span></th>
                            <th id="edit">Edit</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (VideoCates != null)
                        {
                            foreach (var data in VideoCates)
                            {
                                <tr>
                                    <td><input type="checkbox" name="ID" value="@data.vId" class="checkBox custom-checkbox chkCheckBoxId" /></td>
                                    <td><span class="text-primary">@data.vName </span></td>
                                    <td>@data.vTitle</td>
                                    <td>@data.vDescription</td>
                                    <td>@data.vKeyword</td>
                                    <td>@Html.Raw(CMSLIS.Common.Common.getTypeStatus(data.vActive))</td>
                                    <td class="td-actions">
                                        <a href="/News/ListCateVideoAdd?vId=@data.vId" id="Edit"><i class="fa fa-edit edit"></i></a>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>

                <!-- End Sorting -->

            </div>
            <!-- End Content -->

        </section>
    </div>
</div>


<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>


<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>
<script src="/Content/AdminLTE/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
<script src="/Content/AdminLTE/vendor/jquery-datatables/media/js/jquery.dataTables.js"></script>
<script src="/Content/AdminLTE/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js"></script>
<script src="/Content/AdminLTE/vendor/jquery-datatables-bs3/assets/js/datatables.js"></script>

<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/AdminLTE/javascripts/theme.init.js"></script>


@model  CMS_Core.Entity.cms_Comment
@using CMS_Core.Entity;
@{
    ViewBag.Title = "Thêm mới comment";
    var DataReport = (List<cms_News>)ViewBag.cms_News;

}

<!-- Head Libs -->
<script src="/Content/AdminLTE/js/Customer/ListCommentAdd.js"></script>
<script src="/Content/AdminLTE/vendor/modernizr/modernizr.js"></script>



<!-- Begin Form -->
<div class="box box-info">

    @using (Html.BeginForm("ListCommentAdd", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
    <div class="box-body">


        <!-- Begin left page -->

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Tiêu đề bài viết: </label>
            <div class="col-xs-10">

                @DataReport[0].newsName
            </div>


        </div>





        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Nội dung comment: </label>

        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Tên người comment <span class="required">*</span> </label>
            <div class="col-xs-10">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", type = "SingleLine", placeholder = "Tên người comment" })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Email  </label>
            <div class="col-xs-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Ảnh đại diện </label>
            <div class="col-xs-10">
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
                @if (@Model.ImgAvatar != null)
                {
                    <Img src='@CMSLIS.Common.Common.GetPathImage(Model.ImgAvatar)' height="40px" width="40px" />
                    @Html.TextBoxFor(m => m.ImgAvatar, new { @class = "checkbox-inline", Type = "hidden" })
                }
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Link fb  </label>
            <div class="col-xs-10">
                @Html.TextBoxFor(m => m.linkFB, new { @class = "form-control", type = "SingleLine", placeholder = "Link fb" })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Tiêu đề comment <span class="required">*</span> </label>
            <div class="col-xs-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", type = "SingleLine", placeholder = "Tiêu đề comment" })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" style="font-weight:bold; ">Nội dung comment <span class="required">*</span> </label>
            <div class="col-xs-10">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", type = "SingleLine", placeholder = "Nội dung comment", rows = "14" })
            </div>

        </div>





    </div>





        @Html.TextBoxFor(m => m.CommentId, new { Type = "hidden" })
        @Html.TextBoxFor(m => m.NewsId, new { Type = "hidden" })

        <div class="form-group text-center">
            <div class="col-xs-8">
                <button type="submit" name="submit" id="SaveListCommentAdd" value="SaveListCommentAdd" class="btn btn-danger"> <i class="fa fa-save"></i> Lưu (Alt + S)</button>
                <a id="BackListComment" href="/News/ListComment" class="btn btn-primary"> <i class="fa fa-backward"></i>  Quay lại (Alt + Z) </a>
            </div>
        </div>

    }
</div>
<!-- End Form -->


<script src="/content/AdminLTE/vendor/nanoscroller/nanoscroller.js"></script>

<script src="/content/AdminLTE/vendor/magnific-popup/magnific-popup.js"></script>
<script src="/content/AdminLTE/vendor/jquery-placeholder/jquery.placeholder.js"></script>
<!-- Specific Page Vendor -->
<script src="/Content/AdminLTE/vendor/select2/select2.js"></script>
<script src="/Content/AdminLTE/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>

<!-- Theme Base, Components and Settings -->
<script src="/Content/AdminLTE/javascripts/theme.js"></script>

<!-- Theme Custom -->
<script src="/Content/AdminLTE/javascripts/theme.custom.js"></script>

<!-- Theme Initialization Files -->
<script src="/Content/AdminLTE/javascripts/theme.init.js"></script>
<script src="/Content/AdminLTE/js/adminlte.js"></script>
<script src="/Content/AdminLTE/js/init.js"></script>
